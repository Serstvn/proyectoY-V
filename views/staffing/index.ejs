<%- include ../layouts/cabecera.ejs %>
<div class="container-fluid">
        <br>
    <br>
    <h1 class="align-text text-center">STAFFING</h1>
    <br>
    <div class="container-fluid position-fixed"><a href="../staffing/crearSTF"
            class=" btn btn-outline-warning mt-4  text-right"><i
                class='bx bx-layer-plus bx-md bx-flashing-hover'></i></a>
        <br>
        <a href="" class=" btn btn-outline-warning mt-4 text-right"><i
                class='bx bx-calendar bx-md bx-flashing-hover'></i></a>
        <br>
    </div>

    <div class="container shadow p-3 mb-5 bg-white rounded">

        <div class="row justify-content-md-center">

            <div class="col">
                <div class="table-responsive table-hover" class="scroller">
                    <table class="table table-sm text-center mt-4 max">
                        <thead class="thead-light">
                            <tr>
                                <th>ACCION</th>
                                <th>#</th>
                                <th>DEPARTAMENTO</th>
                                <th>CARGO</th>
                                <th>CODIGO</th>
                                <th>NOMBRE CORTO</th>
                                <th>CLIENTE</th>
                                <th>CECO</th>
                                <th>FECHA</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for( let staffing=0; staffing < staffings.length; staffing++ ) { %>
                                <tr id="myRow">
                                    <td>
                                        <div class="btn-group" role="group" aria-label="Button group">

                                            <form class="form-inline" method="post"
                                                action="/staffing/editar/<%=staffings[staffing].id %>">
                                                <button class="btn btn-outline-info" type="submit"><i
                                                        class='bx bx-edit-alt bx-sm bx-tada-hover'></i></button>
                                            </form>
                                        </div>
                                        <div class="btn-group" role="group" aria-label="Button group">

                                            <form class="form-inline" method="post" action="">
                                                <button class="btn btn-outline-danger"
                                                    onclick="return confirm('deseas eliminar a '<%=staffings[staffing].codigo %>''<%=staffings[staffing].nomCorto %>' '???')"
                                                    type="submit"><i
                                                        class='bx bxs-trash bx-sm bx-tada-hover'></i></button>
                                            </form>
                                        </div>
                                    </td>
                                    <td>
                                        <%=staffings[staffing].id %>
                                    </td>
                                    <td>
                                        <%=staffings[staffing].depto_id %>
                                    </td>
                                    <td>
                                        <%=staffings[staffing].cargo_id %>
                                    </td>
                                    <td>
                                        <%=staffings[staffing].codigo %>
                                    </td>
                                    <td>
                                        <%=staffings[staffing].nomCorto %>
                                    </td>
                                    <td>
                                        <%=staffings[staffing].cliente %>
                                    </td>
                                    <td>
                                        <%=staffings[staffing].ceco_id %>
                                    </td>
                                    <td>
                                        <%=staffings[staffing].fecha_id %>

                                    </td>
                                </tr>
                                <% } %>


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>




        <%- include ../layouts/pie.ejs %>