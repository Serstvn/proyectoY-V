<%- include ../layouts/cabecera.ejs %>
<div class="container-fluid">
    <br>
    <br>

    <div class="card">
        <div class="card-body">
            <br>
            <h1 class="align-text-bottom text-center">AGREGAR NUEVO PROYECTO</h1>
            <br>
            <div class="container shadow p-3 mb-5 bg-white rounded">
                <form method="post" action="/proyectos">
                    <div class="container">
                        <div class="row">

                            <div class="col">
                                <div class="form-group">
                                    <label for="my-input">CODIGO</label>
                                    <input id="my-input" class="form-control" type="text" name="codigo">
                                </div>
                                <div class="form-group">
                                    <label for="my-input">CECO</label>
                                    <input id="my-input" class="form-control" type="text" name="ceco">
                                </div>
                                <div class="form-group">
                                    <label for="my-input">CLIENTE</label>
                                    <input id="my-input" class="form-control" type="text" name="cliente">
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label for="my-input">NOMBRE CORTO</label>
                                    <input id="my-input" class="form-control" type="text" name="nombreCorto">
                                </div>
                                <div class="form-group">
                                    <label for="my-input">GERENTE</label>
                                    <input id="my-input" class="form-control" type="text" name="gerente">
                                </div>

                                <br>
                                <button type="submit" class="btn btn-outline-warning"><i
                                        class='bx bx-check-circle bx-md'></i></button>
                                <a href="../proyectos" class="btn btn-outline-danger"><i
                                        class='bx bx-x-circle bx-md'></i></a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <br>
    <br>
    </div>
    
</div>
