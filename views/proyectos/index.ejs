    <h1 class="align-text-bottom text-center">DIRECTORIO ACTIVO DE PROYECTOS</h1>
    </div>


    <div class="container">

        <table class="table table-hover text-center mt-4">
            <thead class="thead-light">
                <tr>
                    <th>#</th>
                    <th>CODIGO</th>
                    <th>CECO</th>
                    <th>CLIENTE</th>
                    <th>NOMBRE CORTO</th>
                    <th>GERENTE</th>
                    <th>ACCIÃ“N</th>
                </tr>
            </thead>
            <tbody>
                <% for( let proyecto=0; proyecto < proyectos.length; proyecto++ ) { %>
                    <tr>
                        <td>
                            <%=proyectos[proyecto].id %>
                        </td>
                        <td>
                            <%=proyectos[proyecto].codigo %>
                        </td>
                        <td>
                            <%=proyectos[proyecto].ceco_id %>
